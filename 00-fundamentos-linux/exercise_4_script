#! /bin/bash

url="https://lemoncode.net"
curl -o downloaded_file.html $url 2>/dev/null

result=$(grep -oi "$1" downloaded_file.html | wc -l)

if (( $result > 0 )); then
    echo "La palabra '$1' aparece $result veces"
    line=$(grep -inm1 devops downloaded_file.html | cut -d: -f1)
    echo "Aparece por primera vez en la l√≠nea $line"
else
    echo "No se ha encontrado la palabra '$1'"
fi
